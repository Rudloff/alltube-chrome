{
    "manifest_version": 2,

    "name": "AllTube Download",
    "short_name": "AllTube",
    "description": "Easily download videos from Youtube, Dailymotion, Vimeo and other websites.",
    "version": "0.1.0",
    "browser_action": {
        "default_icon": "/img/logo_60.png",
        "default_title": "AllTube Download"
    },
    "icons": {
        "32": "/img/favicon.png",
        "60": "/img/logo_60.png",
        "90": "/img/logo_90.png",
        "128": "/img/logo_128.png",
        "243": "/img/logo_app.png"
    },
    "homepage_url": "https://alltubedownload.net/",
    "permissions": [
        "contextMenus"
    ],
    "background": {
        "scripts": ["alltube.js"]
    }
}
